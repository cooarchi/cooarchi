{% extends '@layout/default.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <h3>Existing Relation Definitions</h3>
            <table>
            {% for relation in elementRelations %}
                <tr>
                    <td>{{ relation.getElementFrom().getInfo()|escape }}</td>
                    <td>{{ relation.getRelationLabel().getDescription()|escape }}</td>
                    <td>{{ relation.getElementTo().getInfo()|escape }}</td>
                </tr>
            {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
