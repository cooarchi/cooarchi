{% extends '@layout/default.html.twig' %}

{% block title %}Registration | {% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <h1 class="text-center">Registration for {{ cooArchiName }}</h1>
            </div>
            {% if error is defined and errorInput is not defined %}
                <div class="alert alert-danger" role="alert">{{ error }}</div>
            {% endif %}
            {% if success is defined %}
                <div class="alert alert-success" role="alert">{{ success }}</div>
            {% endif %}
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-5">
            <fieldset id="registration">
                <form action="{{ path('register', {'invitationHash': invitationHash}) }}" method="post">
                    <div class="form-group{% if errorInput is defined and errorInput == "name" %} has-error{%  endif %}">
                        <input type="text" id="name" name="name" value="{{ name | default('') | escape }}" placeholder="Name" class="form-control" />
                        {% if errorInput is defined and errorInput == "name" %}
                            <span class="help-block">{{ error | default('') | escape }}</span>
                        {% endif %}
                    </div>
                    <div class="form-group{% if errorInput is defined and errorInput == "password" %} has-error{%  endif %}">
                        <input type="password" id="password" name="password" value="{{ password | default('') | escape }}" placeholder="Password" class="form-control" />
                        {% if errorInput is defined and errorInput == "password" %}
                            <span class="help-block">{{ error | default('') | escape }}</span>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-dark">Create</button>
                </form>
            </fieldset>
        </div>
    </div>

{% endblock %}
